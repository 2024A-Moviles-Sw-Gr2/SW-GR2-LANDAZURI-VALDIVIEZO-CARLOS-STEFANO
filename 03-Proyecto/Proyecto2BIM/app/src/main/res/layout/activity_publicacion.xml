<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PublicacionActivity"
        android:background="@color/fondoGenral">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="409dp"
            android:layout_height="70dp"
            android:background="@color/fondoMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <ImageButton
                android:id="@+id/ib_regresar_main"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                app:tint="@color/letras"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/fondoMenu"
            android:id="@+id/constraintLayout7">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/border_frame_rosa">

            <TextView
                    android:layout_width="200dp"
                    android:textColor="@color/letras"
                    android:textAlignment="center"
                    android:layout_height="20dp"
                    android:text="aÃ±ade un comentario"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tv_add_coment"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="408dp"
            android:layout_height="305dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            android:id="@+id/constraintLayout6">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_frame"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:id="@+id/iv_foro_publicacion"
                    android:layout_width="43dp"
                    android:layout_height="47dp"
                    android:translationX="20dp"
                    android:translationY="10dp"

                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp"
                    tools:srcCompat="@tools:sample/avatars" />

            <TextView
                    android:id="@+id/tv_fecha_publicacion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/letras"
                    android:textSize="14dp"
                    android:translationX="70dp"
                    android:translationY="35dp"
                    tools:layout_editor_absoluteX="109dp"
                    tools:layout_editor_absoluteY="44dp" />

            <TextView
                    android:id="@+id/tv_titulo_publicacion"
                    android:layout_width="367dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/letras"
                    android:text="TextView"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:translationX="20dp"
                    android:translationY="60dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="71dp" />

            <TextView
                    android:id="@+id/tv_contenido_publicacion"
                    android:layout_width="367dp"
                    android:layout_height="158dp"
                    android:textColor="@color/letras"
                    android:text="TextView"
                    android:textSize="12dp"
                    android:translationX="20dp"
                    android:translationY="85dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="98dp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:translationX="20dp"
                    android:translationY="250dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="138dp"
                    android:background="@drawable/border_frame_rosa">

                <ImageButton
                        android:id="@+id/ib_like_up"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/like"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.089"
                        android:layout_marginStart="10dp" />

                <ImageButton
                        android:id="@+id/ib_like_down"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/dislike"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.142"
                        android:layout_marginEnd="10dp" />

                <TextView
                        android:id="@+id/tv_num_likes_publicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="21dp"
                        android:text="TextView"
                        android:textColor="@color/letras"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ib_like_down"
                        app:layout_constraintHorizontal_bias="0.125"
                        app:layout_constraintStart_toEndOf="@+id/ib_like_up"
                        app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="92dp"
                    android:layout_height="30dp"
                    android:translationX="200dp"
                    android:translationY="250dp"
                    tools:layout_editor_absoluteX="257dp"
                    tools:layout_editor_absoluteY="138dp"
                    android:background="@drawable/border_frame_rosa">

                <TextView
                        android:id="@+id/tv_num_comentarios_publicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="12dp"
                        android:textColor="@color/letras"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_comentarios"
            android:layout_width="409dp"
            android:layout_height="313dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout7"
            tools:listitem="@layout/comentario"/>

</androidx.constraintlayout.widget.ConstraintLayout>